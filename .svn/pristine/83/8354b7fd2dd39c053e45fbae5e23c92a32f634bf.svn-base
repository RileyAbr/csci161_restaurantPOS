package MenuItems;

/**
 *
 * @author riley.abrahamson
 */
public class Soup extends Appetizer {

    private boolean hasMeat;
    
    public Soup(String newName, double newPrice, boolean isCheesy, boolean isMeaty)
    {
        super(newName, newPrice, isCheesy);
        hasMeat = isMeaty;
    }

    public boolean isHasMeat() {
        return hasMeat;
    }

    public void setHasMeat(boolean hasMeat) {
        this.hasMeat = hasMeat;
    }

    @Override
    public String toString() {
        return super.toString() + " Meaty: " + hasMeat;
    }
    
    
}
